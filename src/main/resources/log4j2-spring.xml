<Configutation>
    <status>warn</status>
    <Properties>
        <property>
            <name>baseDir</name>
            <value>logs</value>
        </property>
        <property>
            <name>defaultFileName</name>
            <value>self-service-portal</value>
        </property>
    </Properties>
    <Appenders>
        <Console>
            <name>STDOUT</name>
            <PatternLayout>
                <Pattern>%style{%d{DEFAULT}}{dim} %highlight{[%-5level]} %style{%5pid}{magenta} %style{%c{1.}}{cyan} - %m%n</Pattern>
            </PatternLayout>
        </Console>
        <RollingFile>
            <name>DEFAULT_FILE</name>
            <FileName>${baseDir}/${defaultFileName}.log</FileName>
            <FilePattern>${baseDir}/archived/${defaultFileName}-%d{yyyyMMdd}.log.gz</FilePattern>
            <PatternLayout>
                <Pattern>%d{DEFAULT} [%-5level] %c - %m%n</Pattern>
            </PatternLayout>
            <CronTriggeringPolicy>
                <schedule>0 0 0 * * ?</schedule>
            </CronTriggeringPolicy>
            <DefaultRolloverStrategy>
                <Delete>
                    <basePath>${baseDir}</basePath>
                    <maxDepth>2</maxDepth>
                    <IfFileName>
                        <glob>*/${defaultFileName}-*.log.gz</glob>
                    </IfFileName>
                    <IfLastModified>
                        <age>360d</age>
                    </IfLastModified>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger>
            <name>com.nandasatria</name>
            <additivity>false</additivity>
            <level>debug</level>
            <AppenderRef>
                <ref>STDOUT</ref>
            </AppenderRef>
            <AppenderRef>
                <ref>DEFAULT_FILE</ref>
            </AppenderRef>
        </Logger>
        <Logger>
            <name>org.zkoss</name>
            <additivity>false</additivity>
            <level>info</level>
            <AppenderRef>
                <ref>STDOUT</ref>
            </AppenderRef>
            <AppenderRef>
                <ref>DEFAULT_FILE</ref>
            </AppenderRef>
        </Logger>
        <Logger>
            <name>org.springframework</name>
            <additivity>false</additivity>
            <level>info</level>
            <AppenderRef>
                <ref>STDOUT</ref>
            </AppenderRef>
            <AppenderRef>
                <ref>DEFAULT_FILE</ref>
            </AppenderRef>
        </Logger>
        <Logger>
            <name>org.springframework.test</name>
            <additivity>false</additivity>
            <level>warn</level>
            <AppenderRef>
                <ref>STDOUT</ref>
            </AppenderRef>
            <AppenderRef>
                <ref>DEFAULT_FILE</ref>
            </AppenderRef>
        </Logger>
        <Logger>
            <name>com.zaxxer.hikari</name>
            <additivity>false</additivity>
